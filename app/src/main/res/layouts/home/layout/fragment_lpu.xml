<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="fragment"
            type="com.example.cheakskin.ui.home.components.LPUFragment" />
        <variable
            name="entity"
            type="com.example.cheakskin.ui.home.data.LPU" />
    </data>
<RelativeLayout
    android:onClick="@{fragment::toDetail}"
    android:background="@color/white"
    android:clickable="true"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.home.components.LPUFragment"
    >
    <LinearLayout
        android:id="@+id/stars"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageButton
            android:layout_marginHorizontal="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/favoritesstar_0"
            />
        <ImageButton
            android:layout_marginHorizontal="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/favoritesstar_0"
            />
        <ImageButton
            android:layout_marginHorizontal="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/favoritesstar_0"
            />
        <ImageButton
            android:layout_marginHorizontal="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/favoritesstar_0"
            />
        <ImageButton
            android:layout_marginHorizontal="2dp"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:background="@drawable/favoritesstar_0"
            />
        <TextView
            android:layout_marginHorizontal="4dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:hint="4.8"
            />

    </LinearLayout>
    <TextView
        android:textSize="12sp"
        android:id="@+id/adress"
        android:layout_below="@+id/stars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="г. Южно-Алтайск"/>
    <TextView
        android:textSize="12sp"
        android:layout_below="@+id/adress"
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="ГБУЗ поликлиника"/>
    <TextView
        android:textColor="#2196F3"
        android:textSize="10sp"
        android:layout_below="@+id/name"
        android:id="@+id/number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="+000022200"/>
    <ImageButton
        android:alpha="0.6"
        android:layout_marginVertical="10dp"
        android:padding="30dp"
        android:layout_alignParentRight="true"
        android:background="@drawable/button_right"
        android:layout_width="20dp"
        android:layout_height="40dp"/>

</RelativeLayout>
</layout>